<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet author="Cristina Acsinte" id="2023-11-15-02-film-create">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="film"/>
            </not>
        </preConditions>
        <comment>customer create</comment>
        <createTable tableName="film">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(50)">
            </column>
            <column name="author" type="VARCHAR(50)">

            </column>
            <column name="production" type="VARCHAR(50)">
            </column>
            <column name="genre" type="VARCHAR(50)">
            </column>
            <column name="duration" type="bigint">
            </column>
            <column name="minimum_age" type="bigint">
            </column>
            <column name="sala_cinema" type="bigint">
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id_sala_cinema" baseTableName="sala"
                                 constraintName="fk_sala_cinema_on_film" referencedColumnNames="id"
                                 referencedTableName="film"/>
        <rollback>

            <dropTable tableName="film"/>
        </rollback>
    </changeSet>



</databaseChangeLog>
