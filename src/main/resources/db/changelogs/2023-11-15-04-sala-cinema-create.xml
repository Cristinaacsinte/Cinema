<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet author="Cristina Acsinte" id="2023-11-15-04-sala-cinema-create">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sala"/>
            </not>
        </preConditions>
        <comment>customer create</comment>
        <createTable tableName="sala">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="film_id" type="int)">
            </column>
            <column name="id" type="int">
            </column>
            <column name="max_biglietti" type="int">
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="film_id" baseTableName="sala"
                                 constraintName="fk_film_on_sala" referencedColumnNames="id"
                                 referencedTableName="film"/>
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="sala"
                                 constraintName="fk_biglietto_on_sala" referencedColumnNames="id"
                                 referencedTableName="biglietto"/>
        <rollback>

            <dropTable tableName="sala"/>
        </rollback>
    </changeSet>



</databaseChangeLog>
